package lab12wip;
import java.util.Scanner;

public class ValidatorTestApp {

	public static void main(String[] args) {
		
		System.out.println("Welcome to the Validation Tester application");
		System.out.println();
		//System.out.println("Do you want to test an integer or double value?" 
		//+ "(Enter int or double:  )");
		
		Scanner sc = new Scanner(System.in);
		
		String userChoice;
		while (true) {
			userChoice = sc.next();
			System.out.println("Do you want to test an integer? (Enter: 'y' or 'n'  )");
			
			if (userChoice.equalsIgnoreCase("y")) {
				System.out.println("Int Test");
				System.out.println();
			}
			
		}
		
		//System.out.println("Enter ");

	}

}
